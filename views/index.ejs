<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>MeloconTix</title>
  <style>
    body {
      background-color: black;
      color: white;
    }

    .navbar {
      background-color: blue ;
    }

    .card {
      background-color: #333;
      color: white;
    }

    .card h5,
    .card a {
      color: white;
    }


    .carousel-item img {
      width: 100%;
      height: auto;
    }
    .navbar-nav .nav-link {
      color: white !important; /* Change text color of nav links */
    }

  </style>
</head>

<body>
  <nav class="navbar navbar-expand-sm navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">MeloconTix</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/addproduct">Add to cart</a>
          </li>
        </ul>
        <% if (user) { %>
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link">Welcome, <%= user.username %></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Log out</a>
          </li>
        </ul>
        <% } else { %>
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/login">Log in</a>
          </li>
        </ul>
        <% } %>
      </div>
    </div>
  </nav>

  <div class="container">
    <br>
    <div class="text-center">
      <h2>What's New!</h2>
      <div class="row">
        <% for(let i=0; i < product.length; i++) { %>
        <div class="col-sm-4 mb-4">
          <div class="card h-100">
            <img src="/images/<%= product[i].image %>" class="card-img-top" alt="<%= product[i].productName %>">
            <div class="card-body">
              <h5 class="card-title"><%= product[i].productName %></h5>
              <a href="/products/<%= product[i].productId %>" class="btn btn-primary">View Details</a>
              <% if (user) { %>
              <a href="/editProduct/<%= product[i].productId %>" class="btn btn-secondary">Edit</a>
              <a href="/deleteProduct/<%= product[i].productId %>" class="btn btn-danger"
                onclick="return confirm('Are you sure you want to delete this product?')">Delete</a>
              <% } %>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </div>
  
  <div class="container">
    <br>
    <div class="text-center">
      <h2>Our Reviews</h2>
    </div>
  <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="/images/Screenshot 2024-07-13 235728.png" class="d-block w-100" alt="Slide 1">
      </div>
      <div class="carousel-item">
        <img src="/images/Screenshot 2024-07-13 235745.png" class="d-block w-100" alt="Slide 2">
      </div>
      <div class="carousel-item">
        <img src="/images/Screenshot 2024-07-13 235852.png" class="d-block w-100" alt="Slide 3">
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>

</body>

</html>




